<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dsa.upc.edu.listapp">

    <!-- Permiso necesario para las llamadas HTTP -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash como actividad inicial -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity
            android:name=".StoreActivity"
            android:exported="true" />

        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".SectionActivity"
            android:exported="true" />

        <activity
            android:name=".AddProductActivity"
            android:exported="true" />

        <activity
            android:name=".PartidasMenuActivity"
            android:exported="true" />

        <activity
            android:name=".CarritoActivity"
            android:exported="true" />

        <activity
            android:name=".InventarioActivity"
            android:exported="true" />

        <activity
            android:name=".RandomActivity"
            android:exported="true" />

        <activity
            android:name=".PartidaActivity"
            android:exported="true" />

        <!-- Nueva actividad para mostrar insignias -->
        <activity
            android:name=".InsigniasActivity"
            android:exported="true" />

    </application>
</manifest>
