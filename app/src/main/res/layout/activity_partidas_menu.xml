<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/mision"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".PartidasMenuActivity">

    <!-- Título -->
<TextView
android:id="@+id/tvTitle"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Tus Partidas"
android:textSize="24sp"
android:textStyle="bold"
android:textColor="@android:color/white"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:gravity="center"
android:layout_marginBottom="16dp"/>

    <!-- Botón Crear Partida -->
<Button
android:id="@+id/btnCrearPartida"
android:layout_width="0dp"
android:layout_height="wrap_content"
    android:background="#99FFFFFF"
    android:text="Crear Partida"
app:layout_constraintTop_toBottomOf="@id/tvTitle"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="16dp"
android:layout_marginBottom="16dp"/>

    <!-- RecyclerView de partidas -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recyclerViewPartidas"
android:layout_width="0dp"
android:layout_height="0dp"
app:layout_constraintTop_toBottomOf="@id/btnCrearPartida"
app:layout_constraintBottom_toTopOf="@id/fabOpenMenu"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:clipToPadding="false"
android:paddingBottom="16dp"
android:paddingTop="8dp" />

    <!-- Cargando (ProgressBar) -->
<ProgressBar
android:id="@+id/progressBar"
style="?android:attr/progressBarStyleLarge"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:visibility="gone"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FAB de menú -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/fabOpenMenu"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/baseline_menu_24"
app:backgroundTint="@color/red"
app:tint="@android:color/white"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonInsignias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="452dp"
        android:text="Ver Insignias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCrearPartida" />

</androidx.constraintlayout.widget.ConstraintLayout>
